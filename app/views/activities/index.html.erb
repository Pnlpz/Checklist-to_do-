<div class="container">
  <div class="row">
    <% @activities.each_slice(4) do |row| %>
      <% row.each do |activity| %>
        <div class="col">
            <div class="card">
              <%= image_tag activity.photo, class: 'card-img-top' %>
            <div class="body">
              <h5> <%= activity.name %> </h5>
              <% unless activity.completed?(current_user) %>
              <%= link_to "To Do", activity_checklists_path(activity), class: "btn btn-success", method: :post %>
              <% else %>
              <%= link_to "Done", activity_checklists_path(activity), class: "btn btn-danger", method: :post %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
        <div class="w-100" style: "margin-top:50px"></div>
    <% end %>
  </div>
</div>
